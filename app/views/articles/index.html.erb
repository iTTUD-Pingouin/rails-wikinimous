<h1>All articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <strong><%= article.title %></strong>
      <br />
      <%= article.content %>
      <br />
      <%= link_to "Lire l'article complet" , article_path(article)%> - <%= link_to "Delete", article_path(article), method: :delete %>

    </li>

  <% end %>
</ul>


